<div class="container">
    <h2>Weekly Reporting</h2>
    <nav class="navbar navbar-default" role="navigation" style="height: 52px;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="weekly-navbar">
                <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#" id="weekly-home"></a>
        </div>
        <div class="collapse navbar-collapse" id="weekly-navbar">
            <div id="weekly-op-menu"></div>
            <div class="navbar-right" id="weekly-date-menu"></div>
        </div>
    </nav>
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-4">
                <button type="button" role="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-chevron-left js-previous"></span>
                </button>
            </div>
            <div class="col-sm-4" id="active-operation"></div>
            <div class="col-sm-4">
                <button type="button" role="button" class="btn btn-default pull-right">
                    <span class="glyphicon glyphicon-chevron-right js-next"></span>
                </button>
            </div>
        </div>
    </div>
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-sm-12" id="weekly-safety"></div>
        <div class="col-sm-12" id="weekly-sales"></div>
        <div class="col-sm-12" id="weekly-inventory"></div>
    </div>
</div>